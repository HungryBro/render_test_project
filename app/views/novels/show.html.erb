<h1><%= @novel.title %></h1>
<p><%= @novel.description %></p>

<h2>Chapters</h2>
<ul>
  <% @chapters.each do |chapter| %>
    <li><%= link_to chapter.title, novel_chapter_path(@novel, chapter) %></li>
  <% end %>
</ul>

<%= link_to "Add Chapter", new_novel_chapter_path(@novel), class: "btn btn-success" %>

<!-- ปุ่มกลับไปหน้าแรก -->
<%= link_to "Back to Home", novels_path, class: "btn btn-secondary" %>

<!-- ปุ่มแก้ไขนิยาย -->
<%= link_to "Edit Novel", edit_novel_path(@novel), class: "btn btn-warning" %>

<!-- ปุ่มลบนิยาย -->
<%= button_to "Delete Novel", @novel, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>

